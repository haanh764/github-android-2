<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout01" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="horizontal">

	<ImageView android:id="@+id/gravatar" android:layout_width="50dip"
		android:layout_height="50dip" android:paddingRight="2px" />

	<LinearLayout android:id="@+id/LinearLayout04"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView android:id="@+id/event" android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textStyle="bold" android:paddingLeft="2dip" />

		<TextView android:id="@+id/message" android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textStyle="italic" android:paddingLeft="2dip" />

	</LinearLayout>
</LinearLayout>